@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="nav-link button-width @ManageNavPages.IndexNavClass(ViewContext)" style="display: inline-block;
    padding: 10px 20px;
    margin-bottom: 10px;
    background-color: #FECD2C;
    color: black;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease" id="profile" asp-page="./Index">Profile</a>
    </li>
    <li class="nav-item">
        <a class="nav-link button-width @ManageNavPages.EmailNavClass(ViewContext)" style="display: inline-block;
    padding: 10px 20px;
    margin-bottom: 10px;
    background-color: #FECD2C;
    color: black;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease" id="email" asp-page="./Email">Email</a>
    </li>
    <li class="nav-item">
        <a class="nav-link button-width @ManageNavPages.ChangePasswordNavClass(ViewContext)" style="display: inline-block;
    padding: 10px 20px;
    margin-bottom: 10px;
    background-color: #FECD2C;
    color: black;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease" id="change-password" asp-page="./ChangePassword">Password</a>
    </li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item">
            <a id="external-login" class="nav-link button-width @ManageNavPages.ExternalLoginsNavClass(ViewContext)" style="display: inline-block;
    padding: 10px 20px;
    margin-bottom: 10px;
    background-color: #FECD2C;
    color: black;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease" asp-page="./ExternalLogins">External logins</a>
        </li>
    }
    <li class="nav-item">
        <a class="nav-link button-width @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" style="display: inline-block;
    padding: 10px 20px;
    margin-bottom: 10px;
    background-color: #FECD2C;
    color: black;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a>
    </li>
    <li class="nav-item">
        <a class="nav-link button-width @ManageNavPages.PersonalDataNavClass(ViewContext)" style="display: inline-block;
    padding: 10px 20px;
    margin-bottom: 10px;
    background-color: #FECD2C;
    color: black;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease" id="personal-data" asp-page="./PersonalData">Personal data</a>
    </li>
</ul>
