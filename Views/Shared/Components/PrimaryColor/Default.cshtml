@{ }
@* This is the color filter *@
@model IQueryable<string>

<option value="#" selected="selected">Select Color</option>
<option value="@Url.Action("Products", "Home", new {pageNum = "1"})">All Products</option>

@foreach (string cat in Model ?? Enumerable.Empty<string>())
{
    <option value="@Url.Action("Products", "Home", new{categories = "All", color = cat, pageNum=1})">@cat</option>
}