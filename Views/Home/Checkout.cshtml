<h2 style="text-align: center">CHECKOUT</h2>
<div class="bg-blue text-white content-text">
    <form method="post">
        <div style="display:flex">
            <div style="flex-grow: 1">
                <label class="fs-5">First Name</label> <br />
                <input class="form-control input-box" required type="text" />
                <br />
                <label class="fs-5">Last Name</label> <br />
                <input class="form-control input-box" required type="text" />
                <br />
                <label class="fs-5">City</label> <br />
                <input class="form-control input-box" required type="text" />
                <br />
                <label class="fs-5">State</label> <br />
                <div><vc:states></vc:states></div>
                <br />
                <label class="fs-5">Zip Code</label> <br />
                <input class="form-control input-box" required type="number" />
            </div>
            <div style="flex-grow: 1">
                <label class="fs-5">Credit Card Number</label> <br />
                <input class="form-control input-box" required type="text" />
                <br />
                <label class="fs-5">CVV</label> <br />
                <input class="form-control input-box" required type="text" />
                <br /><br />
                <input class="zesty-button" type="submit" value="Place Order" />
            </div>
            <div class="bg-white text-black rounded" style="flex-grow: 1">
                <p>Order Total</p>
                <p>$.....</p>
            </div>
        </div>
        
    </form>
</div>
