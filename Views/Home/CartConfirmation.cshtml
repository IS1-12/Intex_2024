@using LegosWithAurora.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Cart Confirmation";
}
@model Product

<div class="container bg-blue">
    <div class="row">
        <div class="col-lg-9 col-sm-8">
            <div class="row">
                <div class="col-4">
                    <img src="@Model.ImgLink" width="100%" class="rounded" style="max-height:300px" />
                </div>
                <div class="col-8" style="margin:auto">
                    <span class="text-white" style="text-align:center; font-size:x-large">@Model.Name was added to your cart</span>
                </div>
            </div>
            
        </div>
        <div class="col-lg-2" style="margin:auto">
            <div style="text-align:center"><a class="btn btn-secondary btn-lg m-1" style="background-color: #FECD2C; color:black; text-align:center; width:200px" asp-page="/Cart">View Cart </a></div>
            <div style="text-align:right">
                <a class="btn btn-secondary btn-lg m-1" style="background-color: #FECD2C; color:black; text-align:center; width:200px" href="@ViewBag.ReturnUrl">Continue shopping</a>
            </div>
        </div>
    </div>
   

</div>