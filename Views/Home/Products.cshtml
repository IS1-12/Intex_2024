@{
}
@model LegosWithAurora.Models.ViewModels.ProductListViewModel


<div class="row">
    <div class="col-12">
        <div class="row">
            <h1>Browse Lego sets</h1>
            <div class="container">
                <select onchange="location = this.value;">
                    <vc:product-categories/>
                </select>
                <select onchange="location = this.value;">
                    <vc:primary-color/>
                </select>
            </div>
            <br />
            <br />            
            <br />

            @foreach (var p in Model.Products)
            {
                <div class="col-4">
                    <partial name="LegoSetCard" model="p" />
                </div>
            }
        </div>
            <div page-model="@Model.PaginationInfo"
                 page-action="Products"
                 page-classes-enabled="true"
                 page-class="btn"
                 page-class-normal="btn-outline-dark"
                 page-class-selected="pagination-button"
                 page-url-categories="@Model.CurrentProductType"
                 class="btn-group pull-right m-1"></div>
    </div>
</div>
