@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "All Products";
}
@model IQueryable<Product>

<h1>All Products</h1>
<div class="align-content-center">
    <div style="text-align: right;">
        <a class="btn zesty-button" asp-controller="Home" asp-action="AdminAddProduct">Add Product</a>
    </div>
    <br/>
    @* Generate a list of all products in the database for an admin to view and edit *@
    @foreach (var p in Model)
    {
        <partial name="Components/EditProduct/Default" model="p"/>
        <br/>
    }
</div>`