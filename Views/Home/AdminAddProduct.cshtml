@{
}

@model Product

<form method="post">
    <input asp-for="ProductId" type="hidden"/>
    <div style="display: flex">
        <div style="flex-grow: 1">
            <h2>Add a New Product</h2>
        </div>
        <div style="flex-grow: 1; text-align: right; margin-right: 40px">
            <input class="zesty-button" type="Submit" value="Save Product"/>
        </div>
    </div>
    <div class="bg-blue text-white content-text" style="display: flex">
        <div style="flex-grow: 1">
            <label class="fs-5" asp-for="ImgLink">Product Picture Link</label>
            <br/>
            <input class="form-control input-box" type="text" required placeholder="https://yourlink.com/yourpath/yourimage.png" asp-for="ImgLink"/>
            <br/>
            <label class="fs-5" asp-for="Name">Product Name</label>
            <br/>
            <input class="form-control input-box" type="text" required placeholder="New Toy" asp-for="Name"/>
            <br/>
            <label class="fs-5" asp-for="NumParts">Number of Parts</label>
            <br/>
            <input class="form-control input-box" type="number" required placeholder="How many items of this product are available" asp-for="NumParts"/>
            <br/>
            <label class="fs-5" asp-for="Year">Year</label>
            <br/>
            <input class="form-control input-box" type="number" required placeholder="What year did this set come out?" asp-for="Year"/>
            <br/>
            <label class="fs-5" asp-for="Price">Price</label>
            <br/>
            <input class="form-control input-box" type="number" required placeholder="In US Dollars" asp-for="Price"/>
        </div>
        <div style="flex-grow: 1">
            <label class="fs-5" asp-for="PrimaryColor">Primary Color</label>
            <br/>
            <input class="form-control input-box" type="text" required placeholder="Blue" asp-for="PrimaryColor"/>
            <br/>
            <label class="fs-5" asp-for="SecondaryColor">Secondary Color</label>
            <br/>
            <input class="form-control input-box" type="text" required placeholder="Red" asp-for="SecondaryColor"/>
            <br/>
            <label class="fs-5" asp-for="Category">Category</label>
            <br/>
            <input class="form-control input-box" type="text" required placeholder="Fantasy/Adventure" asp-for="Category"/>
            <br/>
            <label class="fs-5" asp-for="Description">Description</label>
            <br/>
            <textarea class="form-control input-box" rows="7" placeholder="A brief description of the Lego set" asp-for="Description"></textarea>
        </div>
    </div>
</form>
